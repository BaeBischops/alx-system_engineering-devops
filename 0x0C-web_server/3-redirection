#!/bin/bash

# Update package list and install Nginx
sudo apt update
sudo apt install -y nginx

# Create a backup of the original Nginx default configuration file
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Insert redirection configuration into the Nginx default configuration file
sudo bash -c 'cat <<EOL >> /etc/nginx/sites-available/default

server {
    listen 80;
    server_name _;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOL'

# Test the Nginx configuration for syntax errors
sudo nginx -t

# Restart Nginx to apply the changes
sudo systemctl restart nginx

# Output success message
echo "Nginx has been configured to redirect /redirect_me with a 301 Moved Permanently status."
